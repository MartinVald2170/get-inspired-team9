<h2>All quotes</h2>
<div>
  <button><%= link_to("Add new", new_quote_path) %></button>
</div>
<div>
  <% @quotes.each do |quote| %>
    <p><%= quote.body%> -- <%= quote.author%></p>
    <button>  <%= link_to 'Show', quote_path(quote) %> </button>
    <button>  <%= link_to 'Edit', edit_quote_path(quote) %> </button>
    <button>  <%= link_to 'Delete', quote, method: :delete, data: {confirm: "Are you sure you want to delete this quote?"} %> </button>
  <% end %>
</div>
