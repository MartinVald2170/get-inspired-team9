<% if @quote.errors.any? %>
  <div class="error-text">
    <ul>
      <% @quote.errors.full_messages.each do |error| %>
        <li> <%= error %></li>
      <% end %>
    </ul>
  </div>
<%end%>
<div class="form">
  <%= form_with model: @quote, local: true do |f| %>
    <div class="form-group">
      <p> <%= f.label "Quote"%></p>
      <p class="quote-text"> <%= f.text_area :body %></p>
    </div>
    <div class="form-group">
      <%= f.label "Who quote it?"%>
      <%= f.text_field :author %>
    </div>
    <div class="form-group">
      <%= f.label "Image (Optional)" %>
      <%= f.file_field :picture, accept:
  'image/png,image/gif,image/jpeg,image/jpg' %>
    </div>
    <div>
      <%= f.submit%>
    </div>
  <% end %>
</div>
